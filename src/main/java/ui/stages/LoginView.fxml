   <children>
      <ImageView fitHeight="600.0" fitWidth="400.0" layoutX="-8.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/logo.png" />
         </image>
      </ImageView>
      <Label layoutX="460.0" layoutY="75.0" prefHeight="131.0" prefWidth="255.0" text="Login">
         <font>
            <Font name="System Italic" size="90.0" />
         </font>
      </Label>
      <TextField fx:id="tfUsername" layoutX="497.0" layoutY="263.0" prefHeight="43.0" prefWidth="249.0" promptText="Enter your username">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
      <TextField fx:id="tfPassword" layoutX="498.0" layoutY="359.0" promptText="Enter your password">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
      <Label layoutX="379.0" layoutY="270.0" text="Username">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="382.0" layoutY="366.0" text="Password">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button fx:id="btnLogin" layoutX="497.0" layoutY="419.0" mnemonicParsing="false" onAction="#btnLoginOnAction" prefHeight="43.0" prefWidth="249.0" text="Login">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="btnExit" layoutX="671.0" layoutY="542.0" mnemonicParsing="false" onAction="#btnExitOnAction" prefHeight="43.0" prefWidth="114.0" text="Exit">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="btnRegister" layoutX="497.0" layoutY="478.0" mnemonicParsing="false" onAction="#btnRegisterOnAction" prefHeight="43.0" prefWidth="249.0" text="Register">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
