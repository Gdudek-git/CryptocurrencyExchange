<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.ui.controllers.LoginViewController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="379.0" layoutX="-8.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/logo.png" />
         </image>
      </ImageView>
      <Label layoutX="463.0" layoutY="37.0" prefHeight="131.0" prefWidth="255.0" text="Login">
         <font>
            <Font name="System Bold" size="90.0" />
         </font>
      </Label>
      <TextField fx:id="tfUsername" focusTraversable="false" layoutX="525.0" layoutY="201.0" prefHeight="43.0" prefWidth="249.0" promptText="Enter your username" style="-fx-background-color: black; -fx-text-fill: white;">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
      <Label layoutX="388.0" layoutY="205.0" text="Username:">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <Label layoutX="391.0" layoutY="301.0" text="Password:">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
