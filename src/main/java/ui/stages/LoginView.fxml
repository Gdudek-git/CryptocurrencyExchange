         <font>
            <Font size="20.0" />
         </font>
         <graphic>
            <FontAwesomeIcon fill="WHITE" iconName="USER_PLUS" />
         </graphic>
      </Button>
      <PasswordField fx:id="tfPassword" focusTraversable="false" layoutX="525.0" layoutY="297.0" promptText="Enter your password" style="-fx-background-color: black; -fx-text-fill: white;">
         <font>
            <Font size="20.0" />
         </font>
      </PasswordField>
   </children>
</AnchorPane>
